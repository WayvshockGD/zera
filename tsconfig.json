{
    "extends": "ts-node/node12/tsconfig.json",
    "ts-node": {
        "transpileOnly": true,
        "files": true,
    },
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "watch": true,
        "outDir": "./dist",
        "target": "ESNext",
        "esModuleInterop": true,
        "strict": true,
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
}